{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "deploy": "firebase deploy --only functions,firestore:rules,hosting",
    "deploy:prod": "firebase use production && npm run deploy; firebase use default",
    "serve": "concurrently \"npm:watch\" \"firebase serve --only functions,hosting\"",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:watch": "npm run test -- --watch-extensions ts --watch R min",
    "watch": "tsc --watch",
    "logs": "firebase functions:log"
  },
  "main": "lib/index.js",
  "dependencies": {
    "cors": "^2.8.5",
    "firebase-admin": "^11.4.1",
    "firebase-functions": "^4.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "mocha": "^5.2.0",
    "ts-node": "^8.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "engines": {
    "node": "8"
  },
  "private": true
}
